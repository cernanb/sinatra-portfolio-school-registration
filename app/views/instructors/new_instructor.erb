<h2>New Instructor</h2>
<form action="/instructors/new" method="POST" class="pure-form pure-form-aligned">
    <fieldset>
        <div class="pure-control-group">
            <label for="name">Name</label>
            <input name="instructor[name]" type="text" >
            <span class="pure-form-message-inline">This is a required field.</span>
        </div>

        <div class="pure-control-group">
            <label for="email">Email</label>
            <input name="instructor[email]" type="email" >
            <span class="pure-form-message-inline">This is a required field.</span>
        </div>

        <div class="pure-control-group">
             <label for="course">Courses</label>
                 <% Course.all.each do |c|  %>
                 <label> <%= c.title %></label>
                 <input type="checkbox" name="instructor[course_ids][]" value="<%= c.id %>">
             <% end %>
         </div>

      <div class="pure-controls">
        <input type="submit" class="button-submit pure-button" value="New Instructor" />
      </div>
  </fieldset>
</form>
