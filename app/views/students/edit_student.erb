<h1>Edit Student</h1>
<form action="/students/<%= @student.slug %>" method="POST" class="pure-form pure-form-aligned">
    <fieldset>
        <div class="pure-control-group">
            <label for="name">Name</label>
            <input name="student[name]" type="text"  value="<%= @student.name %>">
            <span class="pure-form-message-inline">This is a required field.</span>
        </div>

        <div class="pure-control-group">
             <label for="courses">Courses</label>
                 <% Course.all.each do |c|  %>
                 <label> <%= c.title %></label>
                 <input type="checkbox" name="student[course_ids][]" value="<%= c.id %>" <%= 'checked' if @student.courses.include?(c) %>>
             <% end %>
         </div>

      <div class="pure-controls">
        <input type="submit" class="button-submit pure-button" value="Edit Student" />
      </div>
  </fieldset>
</form>
